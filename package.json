{
  "name": "portfolio-frontend",
  "repository": "github:joeyvanlierop/portfolio-frontend",
  "author": {
    "name": "Joey Van Lierop",
    "url": "https://www.joeyvanlierop.com"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "axios": "^0.19.2",
    "dotenv-webpack": "^1.7.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "lodash.get": "^4.4.2",
    "lodash.merge": "^4.6.2",
    "lorem-ipsum": "^2.0.3",
    "normalize.css": "^8.0.1",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.1",
    "react-textarea-autosize": "^7.1.2",
    "smoothscroll-polyfill": "^0.4.4",
    "styled-components": "^5.1.0",
    "styled-system": "^5.1.5"
  },
  "devDependencies": {
    "babel-plugin-styled-components": "^1.10.7",
    "customize-cra": "^0.9.1",
    "react-app-rewired": "^2.1.6"
  }
}
